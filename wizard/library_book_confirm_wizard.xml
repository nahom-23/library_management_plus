<?xml version="1.0"?>
<odoo>
  <record id="library_book_confirm_form" model="ir.ui.view">
    <field name="name">library.book.confirm.form</field>
    <field name="model">library.book.confirm</field>
    <field name="arch" type="xml">
      <form string="Confirm Book">
        <group>
          <field name="confirm_note"/>
        </group>
        <footer>
          <button string="Confirm" type="object" name="confirm_book_action" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
